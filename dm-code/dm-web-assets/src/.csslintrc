{
	"important": true,
	"adjoining-classes": false, // performance issue, but minification handles this
	"known-properties": true,
	"box-sizing": false, // this is a compatibility issue only in IE6,7 which we do not support
	"box-model": false, // this is a compatibility issue only in IE6,7 which we do not support
	"overqualified-elements": false, // performance issue, but minification handles this
	"display-property-grouping": true,
	"bulletproof-font-face": true,
	"compatible-vendor-prefixes": true,
	"regex-selectors": true,
	"errors": true,
	"duplicate-background-images": true,
	"duplicate-properties": true,
	"empty-rules": true,
	"selector-max-approaching": true,
	"gradients": true,
	"fallback-colors": true,
	"font-sizes": true,
	"font-faces": true,
	"floats": true,
	"star-property-hack": true,
	"outline-none": true,
	"import": false, // performance issue, but minification handles this
	"ids": true,
	"underscore-property-hack": true,
	"rules-count": true,
	"qualified-headings": true,
	"selector-max": true,
	"shorthand": true,
	"text-indent": true,
	"unique-headings": true,
	"universal-selector": false, // performance issue, but there are cases we really need this.
	"unqualified-attributes": true,
	"vendor-prefix": true,
	"zero-units": false // performance issue, but minification handles this
}